{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/status_snapshot.schema.json",
  "title": "StatusSnapshot",
  "description": "Account status snapshot for summary (/status). Recognized when type='status' or fields present.",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "type": { "type": "string", "enum": ["status"] },
    "accountId": { "type": "string" },
    "equity": { "type": "number" },
    "cash": { "type": "number" },
    "unrealizedPnL": { "type": "number" },
    "unrealized_pnl": { "type": "number" },
    "upnl": { "type": "number" },
    "realizedPnL": { "type": "number" },
    "realized_pnl": { "type": "number" },
    "rpnl": { "type": "number" },
    "source": { "type": "string" },
    "updatedAt": { "type": "integer", "minimum": 0 }
  },
  "anyOf": [
    { "required": ["type"] },
    { "required": ["equity"] },
    { "required": ["cash"] },
    { "required": ["unrealizedPnL"] },
    { "required": ["unrealized_pnl"] },
    { "required": ["upnl"] },
    { "required": ["realizedPnL"] },
    { "required": ["realized_pnl"] },
    { "required": ["rpnl"] }
  ],
  "examples": [
    {"type":"status","accountId":"default","equity":100000,"cash":60000,"unrealizedPnL":800.5,"realizedPnL":-1200}
  ]
}

